{
  "name": "react_webpack_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": {
    "name": "Erikson Oliveira",
    "url": "https://eriksonoliveira.com"
  },
  "scripts": {
    "build": "./node_modules/.bin/webpack -p --mode production",
    "start": "./node_modules/.bin/webpack-dev-server --config ./webpack.config.js --mode development",
    "test": "./node_modules/.bin/jest"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^1.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "redux-devtools-extension": "^2.13.5",
    "sass-loader": "^7.1.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "modulePathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  }
}
